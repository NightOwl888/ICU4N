<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>ICU4N</RootNamespace>
    <UseSatelliteAssemblies Condition=" '$(UseSatelliteAssemblies)' == '' ">false</UseSatelliteAssemblies>
  </PropertyGroup>

  <PropertyGroup Label="Assembly Publishing">
    <IsPublishable Condition=" '$(UseSatelliteAssemblies.ToLowerInvariant())' != 'true' ">true</IsPublishable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="../ICU4N.Tests.Transliterator/**/*.cs" Exclude="**/obj/**/*.cs;**/bin/**/*.cs;**/*.Version.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="../../src/ICU4N/ICU4N.csproj" />
  </ItemGroup>

</Project>
